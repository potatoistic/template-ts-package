{
    "name": "template-ts-package",
    "version": "1.0.0",
    "description": "Template for NPM Node Typescript Packages",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "start": "node lib/index.js",
        "rimraf": "rimraf lib",
        "lint": "eslint src/**/*.ts",
        "lint-fix": "eslint --fix src/**/*.ts",
        "generate": "npm run rimraf && npm run swc:build && npm run tsc:build",
        "tsc:build": "tsc --emitDeclarationOnly --declarationDir lib",
        "swc:build": "swc src -d lib",
        "swc:watch": "swc -w src -d lib --log-watch-compilation"
    },
    "keywords": [
        "npm",
        "package",
        "typescript"
    ],
    "author": "dhruvsaxena1998 <https://github.com/dhruvsaxena1998>",
    "license": "MIT",
    "devDependencies": {
        "@swc/cli": "^0.1.55",
        "@swc/core": "^1.2.138",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.15",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "chokidar": "^3.5.3",
        "eslint": "^8.8.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.4",
        "jest": "^27.5.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.3",
        "typescript": "^4.5.5"
    },
    "directories": {
        "lib": "lib"
    }
}
